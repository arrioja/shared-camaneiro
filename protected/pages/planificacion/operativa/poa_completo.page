            <com:TTableCell>
                <com:TActiveDropDownList ID="drop_plan_operativo"
                    DataTextField="nombre"
                    DataValueField="cod_plan_operativo"
                    AutoPostBack="true"
                    OnCallback="actualizar_listado"
                    CausesValidation="false"
                    PromptText="Seleccione"
                    PromptValue="X">
